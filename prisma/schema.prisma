generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ─── Auth Models (NextAuth) ────────────────────────────────────

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ─── App Models ────────────────────────────────────────────────

model User {
  id                 String    @id @default(cuid())
  name               String?
  email              String?   @unique
  emailVerified      DateTime?
  image              String?
  isPremium          Boolean   @default(false)
  subscriptionEnd    DateTime?
  role               String    @default("USER") // USER, ADMIN
  gardenSectionTitle String    @default("Your Gardens")
  createdAt          DateTime  @default(now())

  accounts Account[]
  sessions Session[]
  pillars  Pillar[]
  payments Payment[]
}

model Payment {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  currency  String   @default("USD")
  status    String   @default("PENDING") // COMPLETED, FAILED
  reference String? // Stripe ID etc
  plan      String   @default("monthly") // monthly, annually
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Pillar {
  id           String   @id @default(cuid())
  name         String
  description  String   @default("")
  color        String   @default("#10b981")
  totalCommits Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  pet    Pet?
  habits Habit[]
}

model Pet {
  id            String @id @default(cuid())
  name          String @default("Egg")
  stage         String @default("egg")
  level         Int    @default(1)
  xp            Int    @default(0)
  xpToNextLevel Int    @default(100)
  species       String @default("Chicken") // Chicken, Dragon, Sunflower, CrystalTree
  type          String @default("ANIMAL") // ANIMAL, PLANT
  rarity        String @default("COMMON") // COMMON, RARE, EPIC, LEGENDARY
  color         String @default("#10b981")

  pillarId String @unique
  pillar   Pillar @relation(fields: [pillarId], references: [id], onDelete: Cascade)
}

model Habit {
  id              String    @id @default(cuid())
  name            String
  frequency       String    @default("daily")
  completedToday  Boolean   @default(false)
  streak          Int       @default(0)
  lastCompletedAt DateTime?
  lastRemark      String?
  createdAt       DateTime  @default(now())

  pillarId String
  pillar   Pillar @relation(fields: [pillarId], references: [id], onDelete: Cascade)

  logs HabitLog[]
}

model HabitLog {
  id      String   @id @default(cuid())
  habitId String
  date    DateTime @default(now())
  remark  String?
  habit   Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@index([habitId])
  @@index([date])
}
